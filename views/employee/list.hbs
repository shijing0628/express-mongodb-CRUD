<h3><a class="btn btn-primary" href="/employee"><i class="fa fa-plus"></i> Create New</a> Employee List</h3>
<table class="table table-striped">
 <thread>
  <tr>
   <th>Full Name</th>
   <th>Email</th>
   <th>Mobile</th>
   <th>City</th>
   <th class="d-flex justify-content-center">Edit/Delete</th>
  </tr>
 </thread>
 <tbody>
  {{#each list}}
  <tr>
   <td>
    {{this.fullName}}
   </td>
   <td>
    {{this.email}}
   </td>
   <td>
    {{this.mobile}}
   </td>
   <td>
    {{this.city}}
   </td>
   <td class="d-flex justify-content-center">
    <a href="/employee/{{this._id}}" class="mr-3"><i class=" fas fa-edit"></i></a>
    <a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record?')"><i
      class="fas fa-trash-alt"></i></a>
   </td>
  </tr>
  {{/each}}
 </tbody>
</table>